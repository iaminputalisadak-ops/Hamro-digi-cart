{
  "name": "hamrodigicart",
  "version": "0.1.0",
  "private": true,
  "author": "iaminputalisadak-ops",
  "repository": {
    "url": "https://github.com/iaminputalisadak-ops/Hamro-digi-cart"
  },
  "contributors": ["iaminputalisadak-ops"],
  "dependencies": {
    "@ckeditor/ckeditor5-build-classic": "^41.4.2",
    "@ckeditor/ckeditor5-react": "^11.0.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^13.5.0",
    "ckeditor5": "^47.3.0",
    "dompurify": "^3.3.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-helmet-async": "^2.0.5",
    "react-router-dom": "^7.11.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "cross-env NODE_OPTIONS=--max-old-space-size=4096 react-scripts start",
    "start:network": "cross-env HOST=0.0.0.0 NODE_OPTIONS=--max-old-space-size=4096 react-scripts start",
    "start:3001": "cross-env PORT=3001 NODE_OPTIONS=--max-old-space-size=4096 react-scripts start",
    "backend": "cd backend && php -S 0.0.0.0:8000 -c php.ini -t . router.php",
    "dev": "concurrently -k -n BACKEND,FRONTEND -c green,cyan \"npm run backend\" \"npm start\"",
    "dev:3001": "concurrently -k -n BACKEND,FRONTEND -c green,cyan \"npm run backend\" \"npm run start:3001\"",
    "build": "cross-env NODE_OPTIONS=--max-old-space-size=4096 react-scripts build",
    "optimize:images": "node scripts/optimize-images.mjs backend/uploads",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "sharp": "^0.33.5"
  }
}
